<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TFM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStatusBar</item>

        <item name="backgroundColor">@color/colorBackground</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.TFM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TFM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
