<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TFM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/orange_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="cardBackgroundColor">@color/white</item>
        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_900</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TFM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TFM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>